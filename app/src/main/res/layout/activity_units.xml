<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Units"
    android:background="@drawable/fon815">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:scrollbarThumbVertical="@drawable/scroll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>
    <Button
        android:id="@+id/bzerg"
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/shape_selector"
        android:fontFamily="@font/eurostileextendedmedium"
        android:onClick="zerg"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="7"
        android:shadowDy="6"
        android:shadowRadius="1"
        android:text="Зерги"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#00FF0000"
        />
    <Button
        android:id="@+id/bterran"
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/shape_selector"
        android:fontFamily="@font/eurostileextendedmedium"
        android:onClick="terran"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="7"
        android:shadowDy="6"
        android:shadowRadius="1"
        android:text="Терраны"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bzerg"
        app:rippleColor="#00FF0000"
        />
    <Button
        android:id="@+id/bprotoss"
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/shape_selector"
        android:fontFamily="@font/eurostileextendedmedium"
        android:onClick="protoss"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="7"
        android:shadowDy="6"
        android:shadowRadius="1"
        android:text="Протоссы"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bterran"
        app:rippleColor="#00FF0000"
        />
</androidx.constraintlayout.widget.ConstraintLayout>